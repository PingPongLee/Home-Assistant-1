# lovelace_gen
type: custom:vertical-stack-in-card
title: Belysning
cards:

  - type: entities
    entities:
      - input_select.room_light

  - type: custom:state-switch
    entity: input_select.room_light
    default: Køkken
    states:

      Køkken:
        !include rooms/buttons/bt_kitchen_2_rows.yaml

      Stuen:
        !include rooms/buttons/bt_livingroom.yaml

      Legeværelse:
        !include rooms/buttons/bt_playroom.yaml

      Gangen:
        !include rooms/buttons/bt_hall.yaml

      Hjalte:
        !include rooms/buttons/bt_hjalte.yaml

      Emilio:
        !include rooms/buttons/bt_emilio.yaml

      Colin:
        !include rooms/buttons/bt_colin.yaml

      Pigernes stue:
        !include rooms/buttons/bt_youth_livingroom.yaml

      Cornelie:
        !include rooms/buttons/bt_cornelie.yaml

      Nathalie:
        !include rooms/buttons/bt_nathalie.yaml

      Badeværelser:
        !include rooms/buttons/bt_bathrooms.yaml

      Indgang:
        !include rooms/buttons/bt_entrance.yaml

      Havegang:
        !include rooms/buttons/bt_patio.yaml
